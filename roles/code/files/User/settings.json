// This file is managed by Ansible
{
  "ansible.validation.lint.enabled": false,
  "editor.detectIndentation": false,
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "files.associations": {
    "*.inc": "php",
    "*.tmpl": "php"
  },
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "github.gitProtocol": "ssh",
  "githubPullRequests.createOnPublishBranch": "never",
  "gitlens.views.commitDetails.files.layout": "tree",
  "intelephense.environment.phpVersion": "8.0.0",
  "intelephense.format.braces": "k&r",
  "prettier.bracketSameLine": true,
  "prettier.printWidth": 140,
  "prettier.tabWidth": 4,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoIndent": false,
  "python.analysis.packageIndexDepths": [
    {
      "name": "psycopg2",
      "depth": 2,
      "includeAllSymbols": true
    },
    {
      "name": "django",
      "depth": 2
    },
    {
      "name": "flask",
      "depth": 2
    },
    {
      "name": "fastapi",
      "depth": 2
    }
  ],
  "python.analysis.regenerateStdLibIndices": true,
  "python.analysis.typeCheckingMode": "standard",
  "redhat.telemetry.enabled": true,
  "remote.SSH.enableDynamicForwarding": false,
  "remote.SSH.enableX11Forwarding": false,
  "remote.SSH.externalSSH_ASKPASS": true,
  "remote.SSH.useLocalServer": false,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.customGlyphs": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.focusAfterRun": "terminal",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.ignoreBracketedPasteMode": true,
  "terminal.integrated.initialHint": false,
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.stickyScroll.maxLineCount": 2,
  "window.customTitleBarVisibility": "auto",
  "window.restoreWindows": "none",
  "window.title": "${dirty}${folderName}",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  }
}
